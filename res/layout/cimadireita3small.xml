<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/aflikeleiaute3cimadireita"
        android:layout_width="250dp"
        android:layout_height="130dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/fundomenucimadireita"
                    android:orientation="vertical"
                    android:visibility="invisible" >

    <Button
        android:id="@+id/afliketogglafinalcimadireita"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="101dp"
        android:layout_height="28dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/fundobotao"
        android:onClick="finalToggla"
        android:text="@string/setfim"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/afliketogglainicialcimadireita"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="101dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundobotao"
            android:onClick="inicialToggle"
            android:text="@string/setInit"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/aflikeeditatransicaocimadireita"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="101dp"
            android:layout_height="28dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundobotao"
            android:onClick="criaTrans"
            android:text="@string/newTrans"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/aflikeapagaestadocimadireita"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="101dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundobotao"
            android:onClick="estadoDeleta"
            android:text="@string/statedelete"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/aflikecancelaleiaute3cimadireita"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="101dp"
            android:layout_height="28dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundobotao"
            android:onClick="cancel"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

                </LinearLayout>
