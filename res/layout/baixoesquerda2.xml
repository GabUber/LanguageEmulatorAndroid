<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/aflikeleiaute2baixoesquerda"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/fundomenubaixoesquerda"
                    android:orientation="vertical"
                    android:visibility="invisible" >

                    <Button
                        android:id="@+id/aflikemoveestadobaixoesquerda"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="108dp"
                        android:layout_height="28dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/fundobotao"
                        android:onClick="moveEstado"
                        android:text="@string/move"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/aflikecancelaleiaute2baixoesquerda"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="108dp"
                        android:layout_height="28dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/fundobotao"
                        android:onClick="cancel"
                        android:text="@string/cancel"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="12sp" />

 					</LinearLayout>